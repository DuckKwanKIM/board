<!DOCTYPE html>
<html>
    <head>
        <script>
            function list(){
                location.href = "/board"
            }
        </script>
        
    <%- include("./head.ejs") %>
    </head>
    <body>
        <%- include("./nav.ejs") %>
        <form action="/board/update_2" method="POST">
            <div : style="display: none">
                <input type="hidden" value="<%=content[0].No%>" name="no">
                <input type="hidden" value="<%=content[0].post_id%>" name="post_id">
            </div>
            <div class="container" style="margin-top: 50px;"></div>
            <table class="table">
                <tr>
                    <th>
                        글 제목
                    </th>
                    <td>
                        <input type="text" value="<%=content[0].title%>" name="title">
                    </td>
                </tr>
                <tr>
                    <th>
                        글 내용
                    </th>
                    <td>
                        <input type="text" value="<%=content[0].content%>" name="content">
                    </td>
                </tr>
                <tr>
                    <th>
                        이미지
                    </th>
                    <td>
                        <input type="text" value="<%=content[0].img%>" name="img">
                    </td>
                </tr>
            </table>
            <div align="center">
                <button onclick="update('<%=content[0].No%>')" class="btn btn-outline-success">수정</button>
            </form>
            <button onclick="list()" class="btn btn-outline-success">목록</button>
            </div>
        </div>
    </body>
</html>